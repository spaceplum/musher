@model Musher.Web.Models.GenresIndexViewModel

<h1>Explore genres</h1>
<div class="row">
    <div class="col-sm-6 col-md-4">
        <div class="well">
            @using (Html.BeginForm("Genre", "Genres", FormMethod.Get))
            {
                <div class="form-group">
                    <label>Genre</label>
                    @Html.DropDownList("id", new SelectList(Model.Genres, "Name", "Name"), string.Empty, new { title = "Select a genre", @class = "form-control select2" })
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            }
        </div>
    </div>
    <div class="col-sm-6 col-md-4">
        <h2>Random Genres</h2>
        <div class="well">
            <ul class="searchresult">
                @foreach (var genre in Model.GetRandomGenres(10))
                {
                    <li>@Html.ActionLink(genre.Name, "Genre", "Genres", new { id = genre.Name }, null)</li>
                }
            </ul>
        </div>
    </div>
</div>
