@using RestSharp.Extensions
@model Musher.Web.Models.RecommendationViewModel

<div class="col-sm-4">
    <h2>Artists</h2>
    <div class="well">
        @if (Model.Artists.Any())
            {
            <ul class="searchresult">
                @foreach (var artist in Model.Artists)
                {
                    <li>
                        @Html.ActionLink(artist.Name, "Artist", "Artists", new { id = artist.Name }, null)
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No artists found.</p>
        }
    </div>
</div>
<div class="col-sm-4">
    <h2>Songs</h2>
    <div class="well">
        @if (Model.Songs.Any())
            {
            <ul class="searchresult">
                @foreach (var song in Model.Songs)
                {
                    <li>
                        <div>
                            <a href="https://www.youtube.com/results?q=@song.Title.HtmlAttributeEncode() @song.ArtistName.HtmlAttributeEncode()" target="_blank">@song.Title <span class="glyphicon glyphicon-play-circle"></span></a>
                        </div>
                        <div>@Html.ActionLink(song.ArtistName, "Artist", "Artists", new { id = song.ArtistName }, null)</div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No songs found.</p>
        }
    </div>
</div>
