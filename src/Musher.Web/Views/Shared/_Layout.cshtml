<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Musher</title>
    @Styles.Render("~/style/app")
    @Scripts.Render("~/script/modernizr")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Musher", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Music Recommendations", "Index", "Recommendation")</li>
                    <li>@Html.ActionLink("Artists", "Index", "Artists")</li>
                    <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                </ul>
            </div>
        </div>
    </header>
    <main class="container body-content">
        @RenderBody()
    </main>
    <footer>
        <div class="container">
            <hr/>
            <div>&copy; @DateTime.Now.Year</div>
        </div>
    </footer>
    @Scripts.Render("~/script/app")
</body>
</html>
